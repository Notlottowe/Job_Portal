<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jobportal.EmployerDashboardController"
            style="-fx-background-color: linear-gradient(to bottom, #ecf0f1, #dfe6e9); -fx-padding: 16;">

    <!-- Top bar -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: #2c3e50; -fx-padding: 10 14; -fx-background-radius: 8;">
            <Label text="Employer Dashboard"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #ecf0f1;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="welcomeLabel"
                   text="Welcome, Employer"
                   style="-fx-text-fill: #bdc3c7;"/>
            <Button text="Logout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 4; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Main content "card" -->
    <center>
        <BorderPane style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 14;
                            -fx-effect: dropshadow(gaussian, #b2bec3, 12, 0.3, 0, 3);">
            <center>
                <SplitPane dividerPositions="0.5">

                    <!-- LEFT: Jobs & Applicants (tables only) -->
                    <VBox spacing="10" style="-fx-padding: 0 10 0 0;">
                        <Label text="My Jobs"
                               style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2d3436;"/>

                        <TableView fx:id="jobsTable" VBox.vgrow="ALWAYS"
                                   style="-fx-background-radius: 6; -fx-border-radius: 6;">
                            <columns>
                                <TableColumn fx:id="titleColumn" text="Title" prefWidth="150"/>
                                <TableColumn fx:id="companyColumn" text="Company" prefWidth="120"/>
                                <TableColumn fx:id="locationColumn" text="Location" prefWidth="90"/>
                                <TableColumn fx:id="typeColumn" text="Type" prefWidth="80"/>
                            </columns>
                        </TableView>

                        <HBox spacing="10">
                            <Button text="View Applicants"
                                    onAction="#handleViewApplicants"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 4;"/>
                            <Button text="Delete Job"
                                    onAction="#handleDeleteJob"
                                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-background-radius: 4;"/>
                        </HBox>

                        <Separator/>

                        <Label text="Applicants"
                               style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #2d3436;"/>

                        <TableView fx:id="applicationsTable" VBox.vgrow="ALWAYS"
                                   style="-fx-background-radius: 6; -fx-border-radius: 6;">
                            <columns>
                                <TableColumn fx:id="applicantNameColumn" text="Name" prefWidth="150"/>
                                <TableColumn fx:id="applicantEmailColumn" text="Email" prefWidth="180"/>
                            </columns>
                        </TableView>
                    </VBox>

                    <!-- RIGHT: Post a job + big applicant details panel -->
                    <VBox spacing="10" style="-fx-padding: 0 0 0 10;">
                        <Label text="Post a New Job"
                               style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2d3436;"/>

                        <GridPane hgap="8" vgap="6">
                            <columnConstraints>
                                <ColumnConstraints prefWidth="90"/>
                                <ColumnConstraints prefWidth="220" hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="Title:" GridPane.rowIndex="0"/>
                            <TextField fx:id="titleField"
                                       GridPane.rowIndex="0"
                                       GridPane.columnIndex="1"
                                       promptText="Job title"/>

                            <Label text="Company:" GridPane.rowIndex="1"/>
                            <TextField fx:id="companyField"
                                       GridPane.rowIndex="1"
                                       GridPane.columnIndex="1"
                                       promptText="Company name"/>

                            <Label text="Location:" GridPane.rowIndex="2"/>
                            <TextField fx:id="locationField"
                                       GridPane.rowIndex="2"
                                       GridPane.columnIndex="1"
                                       promptText="City, Country"/>

                            <Label text="Salary:" GridPane.rowIndex="3"/>
                            <TextField fx:id="salaryField"
                                       GridPane.rowIndex="3"
                                       GridPane.columnIndex="1"
                                       promptText="e.g. 90000"/>

                            <Label text="Type:" GridPane.rowIndex="4"/>
                            <ComboBox fx:id="typeComboBox"
                                      GridPane.rowIndex="4"
                                      GridPane.columnIndex="1"
                                      promptText="Select type"/>

                            <Label text="Description:" GridPane.rowIndex="5"/>
                            <TextArea fx:id="descriptionField"
                                      GridPane.rowIndex="5"
                                      GridPane.columnIndex="1"
                                      prefRowCount="4"
                                      wrapText="true"
                                      promptText="Short description of the role..."/>
                        </GridPane>

                        <Button text="Post Job"
                                onAction="#handlePostJob"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4;"/>

                        <Separator/>

                        <!-- ðŸ’¡ BIGGER applicant details panel here, below job posting -->
                        <Label text="Applicant Details"
                               style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #2d3436;"/>

                        <TextArea fx:id="applicantDetailsArea"
                                  VBox.vgrow="ALWAYS"
                                  prefRowCount="8"
                                  editable="false"
                                  wrapText="true"
                                  promptText="Select an applicant on the left to see their full profile, experience, education, and skills..."
                                  style="-fx-background-color: #f5f6fa; -fx-background-radius: 6; -fx-border-radius: 6;"/>
                    </VBox>
                </SplitPane>
            </center>
        </BorderPane>
    </center>
</BorderPane>
