<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jobportal.LoginController"
            style="-fx-background-color: linear-gradient(to bottom,#f5f6fa,#dcdde1); -fx-padding: 24;">

    <center>
        <VBox spacing="16" alignment="CENTER" BorderPane.alignment="CENTER">
            <Label text="Job Portal"
                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <VBox spacing="10" maxWidth="320"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian,#bdc3c7,10,0.5,0,2);">
                <Label text="Login"
                       style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

                <Label text="Email"/>
                <TextField fx:id="emailField" promptText="you@example.com"/>

                <Label text="Password"/>
                <PasswordField fx:id="passwordField" promptText="Password"/>

                <Button text="Login"
                        fx:id="loginButton"
                        onAction="#handleLogin"
                        maxWidth="Infinity"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4;"/>

                <Hyperlink text="Don't have an account? Register"
                           onAction="#openRegister"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
